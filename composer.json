{
  "name": "convenia/convenia-recitable",
  "description": "Reader of txt files",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "php",
    "reader",
    "txt"
  ],
  "authors": [
    {
      "name": "Amadeus Delfino",
      "email": "amadeus.delfino@gmail.com"
    },
    {
      "name": "Convenia",
      "email": "contato@convenia.com.br"
    }
  ],
  "require": {
    "php": ">=7.1",
    "danielstjules/stringy": "^2.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.0|^5.0",
    "fabpot/php-cs-fixer": "^1.11",
    "squizlabs/php_codesniffer": "3.*",
    "mockery/mockery": "^0.9.4"
  },
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "Convenia\\PayrollFileReader\\": "src/"
    }
  },
  "config":{
    "preferred-install": "dist"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "fixer": [
      "./vendor/bin/php-cs-fixer --verbose --config-file=./.php_cs fix"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}